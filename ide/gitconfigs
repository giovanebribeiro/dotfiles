  name = Giovane Boaviagem
  email = giovanebribeiro@gmail.com
[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = white
[alias]
  clean-closed-branches = remote prune origin
  st = status -sb
  ll = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
  f = fetch
  pom = pull origin master
  ps = push
  pst = push --tags
  # Show active users on repo in last 6 months
  active = shortlog --numbered --email --summary --no-merges --since="6 months"
  aa = add --all
  cam = commit -am
  mom = merge origin/master
  ckm = checkout master
  ck = checkout
  ckb = checkout -b
[core]
  editor = /usr/bin/vim
	excludesfile = /home/giovane/.gitignore_global
[push]
  default = matching

