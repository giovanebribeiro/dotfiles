[user]
  name = Giovane Boaviagem
  email = giovanebribeiro@gmail.com
[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = white
[alias]
  clean-closed-branches = remote prune origin
  st = status -sb
  ll = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
  f = fetch
  fc = "!git fetch; git checkout $1"
  ps = push
  psuo = push --set-upstream origin 
  pl = pull
  plom = pull origin master
  ppt = "!git pull; git push --tags"
  # Show active users on repo in last 6 months
  active = shortlog --numbered --email --summary --no-merges --since="6 months"
  aa = add --all
  cam = commit -am
  mom = merge origin/master
  ck = checkout
  ckb = checkout -b
  ckm = checkout master
  rso = remote show origin
  # collect the commits since the last tag
  changelog = "!git log $(git describe --tags --abbrev=0)..HEAD --pretty=format:'%h %s'"
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[core]
  editor = /usr/bin/vim
	excludesfile = /home/giovane/.gitignore_global
[push]
  default = matching
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
