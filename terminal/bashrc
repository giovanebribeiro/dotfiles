##################################
###### SECTION 3: FUNCTIONS ######
##################################

##
# returns the current git branch name
##
parse_git_branch(){
  git --version | grep "git" > /dev/null 2>&1 || return # check if git is installed
  echo `git status 2> /dev/null` | grep "git add <" > /dev/null 2>&1 # if "git add <file> ... is part of message, the branch has changes"
  if [ "$?" -eq "0" ] ; then
    echo ${bRed}`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
  else
    echo ${bGreen}`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
  fi
}

##
# returns the remote branch attatched to current branch
##
git_remote_branch(){
  git --version | grep "git" > /dev/null 2>&1 || return # check if git is installed
  echo "${bMagenta}[`git rev-parse --abbrev-ref --symbolic-full-name @{u} 2> /dev/null`]"
}

git_check_push_branch(){
    git status 2> /dev/null | grep "$1"
}

##
# Converts a unicode code (like '\u250c')
# in a set readable by PS1 var ()
##
unicode_to_hex(){
  echo -e $1 | hexdump -v -e '/1 "%03o "' | awk '{print "\\" $1 "\\" $2 "\\" $3 }'
}

##
# Set the title of console
##
title() { 
#  printf '\e]2;%s\a' "$*";
  echo -n -e "\033]0;$*\007";
}

#####################################
###### SECTION 4: PS1 VARIABLE ######
#####################################

export PS1="\[\n${reset}\342\224\214 ${bCyan}\h [ Kernel \$(uname) \$(uname -r) ]\n${reset}\342\224\234 ${bYellow}\w${reset} - ${bBlue}$(ls -l | wc -l | sed 's: ::g') files, \$(ls -lah | grep -m 1 total | sed 's/total //')b${reset}\]\
  \[\n\342\224\234 \$(parse_git_branch) \$(git_remote_branch)${reset} - \
\$(\
\$(git status > /dev/null 2>&1);
  if [ \$? == 0 ]; then
  OUT_PULL=\$(git_check_push_branch 'atr√°s\|behind');
  OUT_OK=\$(git_check_push_branch 'clean\|vazio');
  OUT_PUSH=\$(git_check_push_branch 'frente\|ahead'); 
  if [ \"\$OUT_PULL\" != \"\" ]; then
  echo \"\"${bYellow}\"\342\254\207\";
  elif [ \"\$OUT_PUSH\" != \"\" ]; then
  echo \"\"${bYellow}\"\342\254\206\";
  else
  echo \"\"${bGreen}\"\316\236\012\";
  fi
  fi
  )${reset} - \$(if [[ \$? == 0 ]]; then echo ${bGreen}\"\342\234\223\"; else echo ${bRed}\"\342\234\227\"; fi)${reset} \]\
  \[\n\342\224\224 \$ "

